{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2020",
    "lib": ["ES2020.Promise"],
    "moduleResolution": "Node16",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "incremental": false,
    "outDir": "lib",
    "declaration": true,
    "skipLibCheck": true,
    "declarationDir": "types"
  },
  "include": [
    "src/*",
    "bin/*"
  ]
}